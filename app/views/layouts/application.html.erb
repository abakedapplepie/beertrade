<!DOCTYPE html>
<html>
  <head>
    <title>/r/beertrade</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="main">
      <% if current_user %>
        <nav>
          <ul id="left-nav">
            <li><%= link_to current_user.username, user_path(current_user) %></li>
            <li><%= link_to 'request a trade', new_trade_path %></li>
          </ul>

          <ul id="right-nav">
            <li><%= link_to "logout", session_path(current_user), method: :delete %></li>
          </ul>
        </nav>
      <% end %>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </div>
  </body>
</html>
