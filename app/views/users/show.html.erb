<div id="reputation">
  <h3>Reputation - <%= @user.reputation %>%</h3>

  <table>
    <tr>
      <td>Completed trades</td>
      <td><%= @user.total_completed_trades %></td>
    </tr>
    <tr>
      <td>Positive</td>
      <td><%= @user.positive_feedback %></td>
    </tr>
    <tr>
      <td>Neutral</td>
      <td><%= @user.neutral_feedback %></td>
    </tr>
    <tr>
      <td>Negative</td>
      <td><%= @user.negative_feedback %></td>
    </tr>
  </table>
</div>


<h1><%= @user.username %></h1>

<% unless @pending.empty? %>
  <h2>Pending trades</h2>

  <ul>
    <% @pending.each do |participant| %>
      <li><%= link_to participant.trade, trade_path(participant.trade) %></li>
    <% end %>
  </ul>

  <%= paginate @pending, param_name: :pending_page %>
<% end %>


<% unless @completed.empty? %>
  <h2>Completed trades</h2>

  <ul>
    <% @completed.each do |participant| %>
      <li><%= link_to participant.trade, trade_path(participant.trade) %></li>
    <% end %>
  </ul>

  <%= paginate @completed, param_name: :completed_page %>
<% end %>
