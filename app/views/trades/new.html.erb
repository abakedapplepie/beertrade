<h1>request a new beer trade</h1>

<%= form_for(@trade) do |f| %>
  <div class="form-row">
    <%= f.label :participant_username, "who are you trading with? (reddit username)" %>
    <%= text_field_tag :participant_username %>
    <span class="username-warning"></span>
  </div>

  <div class="form-row">
    <%= f.label :agreement, "what did you agree to trade? (optional)" %>
    <%= f.text_field :agreement %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
