<h1>request a new beer trade</h1>

<%= form_for(@trade) do |f| %>
  <div class="form-group">
    <%= f.label :participant_username, "who are you trading with? (reddit username)", class: "control-label" %>
    <%= text_field_tag :participant_username, "", class: "form-control" %>
    <span class="username-warning"></span>
  </div>

  <div class="form-group">
    <%= f.label :agreement, "what did you agree to trade? (optional)", class: "control-label" %>
    <%= f.text_field :agreement, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
