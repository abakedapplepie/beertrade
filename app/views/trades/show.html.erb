<p id="notice"><%= notice %></p>

<h1><%= @trade %></h1>

<% if @trade.completed? %>
  <% @trade.participants.each do |participant| %>
    <%= participant.username %>: 
    <%= participant.feedback %>
    (<%= participamt.feedback_description %>)
  <% end %>
<% elsif @trade.waiting_for_approval?(current_user) %>
  <div id="trade-approval">
    This trade is pending your approval.  Please select Yes or No:

    <div id="trade-yes-no">
      <%= link_to "Yes", create_trade_participant_path(@trade), method: :post %>
      |
      <%= link_to "No", trade_path(@trade), method: :delete %>
    </div>
  </div>
<% end %>


<%= link_to 'Edit', edit_trade_path(@trade) %> |
<%= link_to 'Back', trades_path %>
